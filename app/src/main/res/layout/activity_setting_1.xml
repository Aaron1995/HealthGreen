<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_fragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bg_gray_black">

        <ImageView
            android:id="@+id/setting_iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/icon_left_turn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的资料"
            android:textColor="@color/color_text_white"
            android:textSize="24sp" />
    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/setting_rl_1"
                android:layout_width="match_parent"
                android:layout_height="144dp">

                <RelativeLayout
                    android:layout_width="74dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    android:background="@color/color_bg_white">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/icon_picture" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/half_of_16dp"
                        android:text="修改头像"
                        android:textColor="@color/color_text_black"
                        android:textSize="10sp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/setting_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_1"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:text="基本资料"
                android:textColor="@color/color_text_gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/setting_tv1"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginRight="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/half_of_16dp"
                android:background="@drawable/bg_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_of_16dp"
                    android:text="昵称"
                    android:textColor="@color/color_text_black" />

                <TextView
                    android:id="@+id/setting_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Hanawa"
                    android:textColor="@color/color_text_black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_rl_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/setting_rl_2"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginRight="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/half_of_8dp"
                android:background="@drawable/bg_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_of_16dp"
                    android:text="性别"
                    android:textColor="@color/color_text_black" />


                <TextView
                    android:id="@+id/setting_tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="男"
                    android:textColor="@color/color_text_black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_rl_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/setting_rl_3"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginRight="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/half_of_8dp"
                android:background="@drawable/bg_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_of_16dp"
                    android:text="年龄"
                    android:textColor="@color/color_text_black" />


                <TextView
                    android:id="@+id/setting_tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="21"
                    android:textColor="@color/color_text_black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/setting_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_4"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="体型资料"
                android:textColor="@color/color_text_gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/setting_tv2"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginRight="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/half_of_8dp"
                android:background="@drawable/bg_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_of_16dp"
                    android:text="身高"
                    android:textColor="@color/color_text_black" />


                <TextView
                    android:id="@+id/setting_tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="男"
                    android:textColor="@color/color_text_black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_rl_6"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/setting_rl_5"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginRight="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/half_of_8dp"
                android:background="@drawable/bg_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_of_16dp"
                    android:text="体重"
                    android:textColor="@color/color_text_black" />


                <TextView
                    android:id="@+id/setting_tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="58kg"
                    android:textColor="@color/color_text_black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_rl_7"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/setting_rl_6"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginRight="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/half_of_8dp"
                android:background="@drawable/bg_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_of_16dp"
                    android:text="肺活量"
                    android:textColor="@color/color_text_black" />


                <TextView
                    android:id="@+id/setting_tv_fvc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="5800mL"
                    android:textColor="@color/color_text_black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/setting_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_7"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="车辆资料"
                android:textColor="@color/color_text_gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_8"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/setting_tv3"
                android:layout_marginLeft="@dimen/half_of_16dp"
                android:layout_marginRight="@dimen/half_of_16dp"
                android:layout_marginTop="@dimen/half_of_8dp"
                android:background="@drawable/bg_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_of_16dp"
                    android:text="车辆类型"
                    android:textColor="@color/color_text_black" />


                <TextView
                    android:id="@+id/setting_tv_carkind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="小轿车"
                    android:textColor="@color/color_text_black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/setting_btn"
                android:layout_width="144dp"
                android:background="@drawable/btn_bg_clickable"
                android:textColor="@color/color_text_white"
                android:text="确定"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_below="@+id/setting_rl_8"
                android:layout_height="48dp" />
        </RelativeLayout>

    </ScrollView>
</LinearLayout>