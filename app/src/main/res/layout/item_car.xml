<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_fragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_item"
        android:layout_marginBottom="@dimen/half_of_8dp"
        android:elevation="@dimen/elevation">

        <TextView
            android:id="@+id/car_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="10"
            android:textColor="@color/color_text_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/car_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_tv_month"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="2016"
            android:textColor="@color/color_text_gray"
            android:textSize="10dp" />

        <View
            android:id="@+id/car_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/car_tv_month"
            android:background="@color/color_text_gray" />

        <TextView
            android:id="@+id/car_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/car_tv_month"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/car_divider"
            android:text="20"
            android:textColor="@color/color_text_gray"
            android:textSize="10dp" />

        <View
            android:id="@+id/car_divider2"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/car_divider"
            android:background="@color/color_text_gray" />

        <TextView
            android:id="@+id/car_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/car_tv_day"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/car_tv_day"
            android:text="17:09"
            android:textColor="@color/color_text_gray"
            android:textSize="10dp" />


        <ImageView
            android:id="@+id/car_iv_kind"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/car_tv_month"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/icon_car" />

        <TextView
            android:id="@+id/car_tv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/car_tv_month"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/car_iv_kind"
            android:text="杭州师范大学"
            android:textColor="@color/color_text_gray"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/car_tv_time"
            android:layout_below="@id/car_tv_time"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/car_ll1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/car_tv_time"
                android:layout_below="@id/car_tv_time"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/car_tv_exhaust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="200"
                        android:textColor="@color/color_text_black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="2dp"
                        android:text="mg"
                        android:textColor="@color/color_text_gray"
                        android:textSize="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/car_iv_exhaust_trend"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icon_rise" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/car_tv_freed"
                        android:layout_gravity="center"
                        android:text="尾气"
                        android:textColor="@color/color_text_gray"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/car_ll2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_tv_time"
                android:layout_toRightOf="@+id/car_ll1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/car_tv_gasoline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="3"
                        android:textColor="@color/color_text_black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="2dp"
                        android:text="ml"
                        android:textColor="@color/color_text_gray"
                        android:textSize="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/car_iv_gasoline_trend"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icon_drop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/car_tv_freed"
                        android:layout_gravity="center"
                        android:text="汽油"
                        android:textColor="@color/color_text_gray"
                        android:textSize="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/car_tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>