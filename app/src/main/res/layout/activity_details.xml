<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626c7f"
    android:orientation="vertical"
    android:weightSum="100">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <ImageView
            android:id="@+id/home_iv_left_time"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/icon_left_turn" />

        <ImageView
            android:id="@+id/home_iv_right_time"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/icon_right_turn" />

        <TextView
            android:id="@+id/home_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="10月"
            android:textColor="#ecf0f1"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_tv_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="2015"
            android:textColor="#ecf0f1" />


    </RelativeLayout>
    //20

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"></LinearLayout>//5

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="vertical"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_cigarette_tv_num"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="24.8"
                android:textColor="#ecf0f1"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_cigarette" />

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="wrap_content"></LinearLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/detail_cigarette_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="这月您总计吸了156μg尾气"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/detail_cigarette_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_cigarette_tv1"
                    android:layout_centerHorizontal="true"
                    android:text="相当于每天抽了0.8根烟"
                    android:textColor="#ecf0f1" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_tree_tv_num"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="21"
                android:textColor="#ecf0f1"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_tree" />

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="wrap_content"></LinearLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/detail_tree_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="这月您开车产生了156μg尾气"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/detail_tree_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_tree_tv1"
                    android:layout_centerHorizontal="true"
                    android:text="相当于每天砍了0.7颗树"
                    android:textColor="#ecf0f1" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_petrol_tv_num"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="12"
                android:textColor="#ecf0f1"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_petrol" />

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="wrap_content"></LinearLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/detail_petrol_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="这月您坐公交车共计500公里"
                    android:textColor="#ecf0f1" />

                <TextView
                    android:id="@+id/detail_petrol_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_petrol_tv1"
                    android:layout_centerHorizontal="true"
                    android:text="相当于每天节省0.4L汽油"
                    android:textColor="#ecf0f1" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>//35

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"></FrameLayout>
</LinearLayout>