<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray">

    <TextView
        android:id="@+id/dialog_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_gray"
        android:layout_centerInParent="true"
        android:text=":"/>
    <NumberPicker
        android:id="@+id/dialog_np_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/dialog_colon"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"></NumberPicker>

    <NumberPicker
        android:id="@+id/dialog_np_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dialog_colon"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"></NumberPicker>

</RelativeLayout>